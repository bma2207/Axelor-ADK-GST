<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<selection name="gst-account-type-select">
		<option value="current">Current</option>
		<option value="saving">Saving</option>
	</selection>
	<grid name="bank-grid" model="com.axelor.gst.db.Bank"  title="bank-grid">
		<field name="bank" title="Bank Name" />
		<field name="accountNo" title="Account No"/>
		<field name="IFSC" title="IFSC Code"/>
		<field name="type" title="Account Type"/>
		<field name="address" title="Branch" />
	</grid>

	<form name="bank-form" model="com.axelor.gst.db.Bank" title="address-form" width="large" css="panel-pink">
		<panel title="Bank Details" colSpan="12">
		<field name="bank" required="true" title="Bank Name" />
		<field name="accountNo" required="true" title="Account No" />
		<field name="IFSC" required="true" title="IFSC Code" />
		<field name="type" selection="gst-account-type-select" required="true" title="Account Type" />
		<field name="address" title="Branch"  />
		</panel>
		<panel sidebar="true">
			<field name="createdOn" />
			<field name="updatedOn" />
		</panel>
	</form>
	
</object-views>
